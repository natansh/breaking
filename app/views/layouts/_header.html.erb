<header>
  <div id="top-bar">
    <div id="container"> 
      <div class="heading">
        <h1>Breaking</h1>
      </div>
      <li><%= link_to "Home", root_path %></li>

      <% if logged_in? %>
        <%= current_user %>
        <%= link_to "Profile", current_user %>
        <%= link_to "Log out", logout_path, method: "delete", class: "btn btn-transparent login-btn" %>
      <% else %>
        <%= link_to "Log in", login_path, class: "btn btn-transparent login-btn" %>
      <% end %>
    </div>
  </div>
</header>
